{
    // Форматирование и стиль кода
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.autoSave": "onWindowChange",

    // Python
    "python.languageServer": "Pylance",
    "python.formatting.provider": "autopep8",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,

    // Live Server
    "liveServer.settings.port": 5500,
    "liveServer.settings.root": "/",
    "liveServer.settings.wait": 500,

    // Docker
    "docker.languageserver.formatter.enable": true,
    "docker.enableLinting": true,
    "docker.linting.linter": "hadolint",

    // C#
    "csharp.format.enable": true,
    "csharp.suppressDotnetRestoreNotification": true,
    "csharp.referencesCodeLens.enabled": true,
    "csharp.testsCodeLens.enabled": true,

    // Go
    "go.formatTool": "gofmt",
    "go.lintTool": "golint",
    "go.lintOnSave": "package",
    "go.useLanguageServer": true,
    "go.testOnSave": true,
    "go.vetOnSave": true,
    "go.buildOnSave": "package"

    // IntelliCode
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // .NET
    "dotnet.defaultSolution": "",

    // WSL
    "remote.WSL.fileWatcher.polling": true
}
